-
  let links = [
    {
      href: "/about",
      content: "About",
      path: "/about(.html)?"
    },
    {
      href: "/projects",
      content: "Projects",
      path: "/project(.html|s\/)?"
    },
    {
      href: "/contact",
      content: "Contact",
      path: "/contact(.html)?"
    }
  ];

mixin navbar(page)
  nav.navbar(role="navigation")
    .navbar-container
      +link.navbar-logo("/")
        +icon("logo")

      .flex-grow

      button.navbar-link(type="button", role="button" aria-label="Light/Dark mode toggle" title="Switch Theme")
        +icon("theme_switcher")

      button.navbar-link(type="button", role="button" aria-label="Navigation bar button" title="Menu Bar")
        +icon("menu_double_bar")

      //- section.navbar-list
        each link, i in links
          - let active = new RegExp(link.path, "i").test(page.url);
          +link(link.href)(class="navbar-link" class={ active } data-path=link.path)
