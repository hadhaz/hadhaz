-
  let links = [
    {
      href: "/about",
      content: "About",
      path: "/about(.html)?"
    },
    {
      href: "/projects",
      content: "Projects",
      path: "/project(.html|s\/)?"
    },
    {
      href: "/contact",
      content: "Contact",
      path: "/contact(.html)?"
    }
  ];

mixin navbar(page)
  nav.navbar(role="menubar")
    .navbar-container
      +link.navbar-logo("/")
        .wrapper(aria-label="okikio logo")
          +icon("logo")

      .flex-grow

      button.navbar-icon.mr-5(type="button", aria-label="Light/Dark mode toggle" title="Switch Theme")
        .wrapper
          +icon("theme_switcher")

      button.navbar-icon(type="button", aria-haspopup="menu" aria-expanded="hidden" aria-label="Navigation menu button" title="Menu Bar")
        .wrapper
          +icon("menu_double_bar")
    
    //- .navbar-list(role="menu").grid
      .container.place-self-center.grid.gap-y-10
        each link, i in links
          - let active = new RegExp(link.path, "i").test(page.url);
          +link(link.href)(role="menuitem" class="navbar-link" class={ active } data-path=link.path)
            span= link.content
          
      //- aside.social-sidebar.horizontal
        .container
          .iconset
            - let list = ["twitter", "facebook", "instagram", "github", "linkedin"];
            each value in list
              +link(aria-label=`Link to my ${value}`)
                +icon(value)