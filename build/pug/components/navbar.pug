-
  let links = [
    {
      href: "/about",
      content: "About",
      path: "/about(.html)?"
    },
    {
      href: "/projects",
      content: "Projects",
      path: "/project(.html|s\/)?"
    },
    {
      href: "/contact",
      content: "Contact",
      path: "/contact(.html)?"
    }
  ];

mixin navbar(page)
  nav.navbar
    .navbar-container(role="menubar")
      +link.navbar-logo("/")
        .wrapper(aria-label="okikio logo")
          +icon("logo")

      .flex-grow

      //- button.navbar-link(type="button", aria-label="Light/Dark mode toggle" title="Switch Theme")
        .wrapper
          +icon("theme_switcher")

      //- https://www.w3.org/TR/wai-aria-practices-1.1/#menu
      button.navbar-link(type="button", aria-haspopup="menu" aria-expanded="hidden" aria-label="Navigation menu button" title="Menu Bar")
        .wrapper
          +icon("menu_double_bar")

      //- section.navbar-list(role="menu")
        each link, i in links
          - let active = new RegExp(link.path, "i").test(page.url);
          div(role="menuitem")
            +link(link.href)(class="navbar-link" class={ active } data-path=link.path)
