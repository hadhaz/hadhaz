extends /layouts/layout.pug

block hero
  .hero
    .container
      h1 Hello
      .scroll-btn
        button(type="button", role="button" aria-label="Scroll down button" title="Scroll Down")
          | Scroll
          +icon("arrow_downward")
  .social-sidebar
    .container
      .iconset
        - let list = ["twitter", "facebook", "instagram", "github", "linkedin"];
        each value in list
          +link
            +icon(value)

block content
  .mx-auto.w-full.p-24.max-w-screen-lg
    .p-16
      .sub-title.font-extrabold
        h2.inline-block.text-primary.text-4xl.mr-2 dedicated.
        span.text-base (adj.):
      p.mt-5.trackin-wide.font-bold.description.text-xl devoted to a task or purpose; having single-minded loyalty or integrity.
      p.leading-9.mt-10.trackin-wide.description.text-xl Dedication is at the heart of what I do. My name is Okiki and I am a Website Developer, what I create is driven by passion and fine tuned to overcome any and all challenges.
