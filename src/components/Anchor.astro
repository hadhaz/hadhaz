---
import Icon from "astro-icon";

let { href, class: className, ...rest } = Astro.props;
let external = /^(http|mailto)/.test(href);
let attrs = external ? { target: "_blank", rel: "noopener" } : {};
---

<a {href} class={className} {...Object.assign(attrs, rest)}>
  <slot />
  {external && <Icon name="fluent:arrow-up-right-24-filled" />}
</a>

<style lang="scss">
  svg {
    display: inline-block;
    width: 1em;
    height: 1em;
    opacity: 0.6;
  }
</style>
