-
  let links = [
    {
      href: "/#about",
      content: "About",
      path: "/(#)?about"
    },
    {
      href: "/#projects",
      content: "Projects",
      path: "/(#)?project(s)?"
    },
    {
      href: "/#contact",
      content: "Contact"
    }
  ];

mixin navbarLinks(page)
  each val, i in links
    - let active = new RegExp(val.path || val.href, "i").test(page.url);
    +link(val.href)(class=`navbar-link` data-path=val.path class={ active })= val.content

mixin navbar(page)
  nav-overlay
  nav(role="navigation" initial-color="bright" color-mode="dark")
    nav-cover(type="small")
    nav-cover(type="large")
    navbar
      +link("/")(class="navbar-logo" aria-label="okikio")
        +icon("logo")

      .flex-grow
      navbar-list
        +navbarLinks(page)

      button.navbar-menu(type="button" aria-label="Navigation bar button" title="Menu")
        span Menu
    nav-link-bar