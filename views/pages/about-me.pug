extends /app.pug

block pageInfo
  -
    let page = {
      websiteURL,
      url: "/about-me",
      name: "about-me",
      title: "About me — The story of Okiki Ojo.",
      description: "What drove me to become a Web Developer and why? I explore my life story, as well as my passion for engineering."
    };

block hero
  //- Hero layer
  +hero({
    title: "About me — The story of Okiki Ojo, web developer extrodinare.",
    content: "What drove me to become a Web Developer and why?",
    image: {
      src: "cloudinary/assorted-color-flowers",
      alt: "An image of an assortment of flower of different colors, shapes and size; beautiful red, cream, white, and pink shades of flowers. By @pcristina18 on Unsplash."
